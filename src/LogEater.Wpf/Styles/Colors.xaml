<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="TextColor"
                     Color="LightSlateGray" />

    <SolidColorBrush x:Key="WarningColor"
                     Color="PaleVioletRed" />

    <SolidColorBrush x:Key="ApprovalColor"
                     Color="LimeGreen" />

    <SolidColorBrush x:Key="BorderColor"
                     Color="#DDDDDD" />

    <SolidColorBrush x:Key="HeaderFooterBackgroundColor"
                     Color="WhiteSmoke" />

    <SolidColorBrush x:Key="BackgroundColor"
                     Color="White" />

    <SolidColorBrush x:Key="HeadingColor"
                     Color="DodgerBlue" />
</ResourceDictionary>